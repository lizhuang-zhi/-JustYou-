.long {
  width: 156px;
  /* height: 106px; */
  border-radius: 10px;
}

.long .longbox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  margin-bottom: 30rpx;
}

.long .longbox .up{
  display: flex;
  align-items: center;
}

.long .longbox .up .pic{
  width: 60rpx;
  height: 60rpx;
  padding-right: 24rpx;
}
.long .longbox .up .pic image{
  width: 100%;
  height: 100%;
}

.long .longbox .up .tit{
  font-size: 30rpx;
  font-weight: 600;
}

.long .longbox .mid .word{
  font-size: 25rpx;
  color: rgb(140, 140, 140);
  padding: 20rpx 0 0;
  line-height: 1.7;
}
.long .longbox .bottom{
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
}
.long .longbox .bottom .img{
  width: 40rpx;
  height: 40rpx;
}
.long .longbox .bottom .img image{
  width: 100%;
  height: 100%;
}
