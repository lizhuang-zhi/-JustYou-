.outbox{
	margin:10px 0;
	border-bottom: 1px solid rgb(220,220,220); 
}
/* 设置用户一栏 */
.user-list{
	height: 45px;
	padding:0 10px;
	position: relative;
	font-size: 12px;
	margin-bottom:10px;
}
/* 用户头像 */
.box .user-list .user-img{
	width: 45px;
	height: 100%;
	position: absolute;
}
/* 用户头像样式 */
.user-list .user-img image{
	width: 100%;
	height: 100%;
	border-radius: 50%;
}
/* 用户的id*/
.user-list .user-id{
	height:20px;
	position: relative;
}
/* 用户的id样式*/
.user-list .user-id text{
	top: 0;
	left: 52px;
	position: absolute;
}

/* 用户发表时间 */
.user-list .user-time{
	top: 22px;
	left:60px;
	position: absolute;
	color: #353535;
}