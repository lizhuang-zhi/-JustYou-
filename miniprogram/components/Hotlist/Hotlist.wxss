.list-list{
  width: 100%;
  height: 40px;
  line-height: 40px;
  font-size: 16px;
  border-bottom: 1px solid #a9a9a9;
  display: flex;
  justify-content: center;
  margin: 5px 0;
}
.list-list .list-num{
  width: 30px;
  height: 92%;
  line-height: 40px;
  font-size: 16px;
  text-align: center;
  background-color: skyblue;
  color: white;
}
.list-list .list-tip{
  padding-left: 20px;
  width: 100%;
  height: 100%;
  color: rgb(103,125,155);
}
.list-list .hot-num{
  color: red;
  padding: 0 5px;
}
.list-list .hot-img{
  width: 32px;
  height: 32px;
}