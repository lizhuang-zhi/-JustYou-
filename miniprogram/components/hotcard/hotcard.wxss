/* 外部 */
.outcard{
  padding: 0 10px;
  margin:8px 0;
}
/* 卡片 */
.card{
  width: 100%;
  height: 80px;
  position: relative;
}
/* 图片 */
.card .card-img{
  width: 80px;
  height: 80px;
  position: absolute;
  left: 0;
  top: 0;
}
.card .card-img .hot-num{
  width:20px;
  height: 20px;
  line-height: 20px;
  font-size: 13px;
  text-align: center;
  position: absolute;
  top: 0;
  left: 0;
  border-top-right-radius:10px;
  border-top-left-radius:10px;
  border-bottom-right-radius: 10px;
  color:white;
}

.card .card-img .img{
  width: 100%;
  height: 100%;
  border-radius: 10px;
}
/* 内容 */
.card .card-content{
  height: 100%;
  position: absolute;
  left: 90px;
  display: flex;
  justify-content:center;
  flex-direction: column;
}
.card .card-content .title,.card .card-content .hotnum{
  height:30px;
}
/* 文字 */
.card .card-content .title text,.card .card-content .hotnum text{
  height:30px;
  line-height:30px;
  font-size: 14px;
  text-align: center;
  letter-spacing: 2rpx;
}
.card .card-content .hotnum .con{
  color: rgb(138,138,138);
}
.card .card-content .title .hotcontent{
  margin-left: 10px;
  color:red;
  background-color: rgb(250,234,231);
  border-radius: 10px;
}