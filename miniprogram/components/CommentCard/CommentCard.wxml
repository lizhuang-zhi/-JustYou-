<view class="outbox">
		<view class="box">
			<!-- 设置用户列表 -->
			<view class="user-list">
				<!-- 用户头像 -->
				<view class="user-img" bindtap="tapMe">
					<image src="{{userImg}}"></image>
				</view>
				<!-- 用户id -->
				<view class="user-id">
					<text>{{username}}</text>
				</view>
				<!-- 发表时间 -->
				<view class="user-time">
					<text>{{realseTime}}</text>
				</view>
			</view>
      <view class="content">
          <text class="Floor">{{Num}}楼</text>
          <view class="txt">
            <text>{{txt}}</text>
          </view>
      </view>
		</view>
	</view>