.topbox{
	width: 100%;
	height: 60px;
	display: flex;
	margin-bottom: 25px;
}
.topbox .attention,.topbox .fans{
	width:50%;
	height: 100%;
	text-align: center;
	margin-top: 20px;
	border-bottom:1px solid rgb(198, 198, 198);
}
.attention .num,.fans .num{
	height: 18px;
	font-size: 20px;
}
.attention .nam,.fans .nam{
	font-size: 16px;
	color: #888;
}
