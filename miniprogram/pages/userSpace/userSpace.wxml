<view class="head">
	<!-- 背景图片 -->
	<image src="https://s1.ax1x.com/2020/10/01/0KfmY4.jpg"></image>
	<!-- 设置关注 -->
	<view bindtap="tapMe" class="Add_attention">
		<text>{{atten}}</text>
		<!-- <image wx:if="{{judge}}" src="cloud://kchheniry-4lstb.6b63-kchheniry-4lstb-1302952647/JustYou/User/add1.png"></image>
		<image wx:else src="cloud://kchheniry-4lstb.6b63-kchheniry-4lstb-1302952647/JustYou/User/add.png"></image> -->

	</view>

	<!-- 用户列表 -->
	<view class="user-list">
		<!-- 用户头像 -->
		<view class="user-img">
			<image src="cloud://leo-wxnmc.6c65-leo-wxnmc-1302702304/JustYou/goddes.png"></image>
		</view>
		<!-- 用户id -->
		<view class="user-id">
