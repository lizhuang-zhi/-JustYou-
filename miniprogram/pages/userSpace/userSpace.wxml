		<view class="user-time">
			<text>541天</text>
		</view>
	</view>
</view>
<!-- 设置动态框 -->
<view class="main">
	<!-- 顶部导航栏 -->
	<view class="top-wrapper">
		<!-- 关注 -->
		<view bindtap="attent" class="attention">
			<view class="attention-num">25</view>
			<view class="attention-name">关注</view>
		</view>
		<!-- 粉丝 -->
		<view bindtap="attent" class="fans">
			<view class="fans-num">{{fans}}</view>
			<view class="fans-name">粉丝</view>
		</view>
		<!-- 动态 -->
		<view class="activity" bindtap="Mylist">
			<view class="activity-num">8</view>
			<view class="activity-name">我的订单</view>
		</view>
	</view>
</view>
