.headbar {
  display: flex;
  align-items: center;
  padding: 50rpx 0 20rpx 30rpx;
  background: rgb(246,246,246);
}

.headbar .pic {
  width: 3.2rem;
  height: 3.2rem;
  animation-name: roll_image;
  animation-duration: 2s;
  animation-iteration-count: 1;
  animation-fill-mode: backwards;
  animation-delay: .6s;
}

@keyframes roll_image {
  0% {
    transform: translateX(-200rpx) rotate(0);
  }

  50% {
    transform: translateX(300rpx) rotate(720deg);
  }

  100% {
    transform: translateX(0) rotate(0);
  }
}

.headbar .words {
  padding-left: 20rpx;
  animation-name: headwords;
  animation-duration: 1s;
  animation-delay: 2.8s;
  animation-iteration-count: 1;
  animation-fill-mode: backwards;
  font-size: 30rpx;
  font-weight: bold;
  color: #343434;
}

@keyframes headwords {
  0% {
    transform: scale(0);
  }

  100% {
    transform: scale(1);
  }
}

