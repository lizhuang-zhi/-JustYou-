<!-- 顶部栏 -->
<van-sticky>
  <view class="headbar">
    <view class="pic" bindtap="showPopup">
      <van-image round width="3.2rem" height="3.2rem" src="https://img.yzcdn.cn/vant/cat.jpeg" />
    </view>
    <view class="words">晚上好，K</view>
  </view>
</van-sticky>

