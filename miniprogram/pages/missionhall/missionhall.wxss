/* 顶部 */
.topbox {
  margin: 30rpx 50rpx 0;
}

.topbox .topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.topbox .topbar .toast {
  font-size: 26rpx;
  color: #B9B9B9;
}

.topbox .topbar .tit .word {
  font-size: 60rpx;
  z-index: 2;
}

.topbox .topbar .tit .backgroud {
  height: 23rpx;
  background: linear-gradient(244deg, rgba(255, 255, 255, 0) 0%, rgba(249, 210, 87, 1) 50%, rgba(255, 255, 255, 0) 100%);
  position: relative;
  top: -35rpx;
  left: -10rpx;
  z-index: -1;
}



/* 主体内容部分 */
.outbox{padding: 0 50rpx;}
.outbox .contentBox{display: flex;
flex-wrap: wrap;
justify-content: space-between;
width: 100%;}

.outbox .contentBox .long {
  width: 48%;
  /* height: 106px; */
  border-radius: 10px;
  margin-bottom: 30rpx;

}

.outbox .contentBox .long .longbox {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx;
  /* margin-bottom: 30rpx; */
}

.outbox .contentBox .long .longbox .up{
  display: flex;
  align-items: center;
}

.outbox .contentBox .long .longbox .up .pic{
  width: 60rpx;
  height: 60rpx;
  padding-right: 24rpx;
}
.outbox .contentBox .long .longbox .up .pic image{
  width: 100%;
  height: 100%;
}

.outbox .contentBox .long .longbox .up .tit{
  font-size: 30rpx;
  font-weight: 600;
}

.outbox .contentBox .long .longbox .mid .word{
  font-size: 25rpx;
  color: rgb(140, 140, 140);
  padding: 20rpx 0 0;
  line-height: 1.7;
}
.outbox .contentBox .long .longbox .bottom{
  display: flex;
  justify-content: space-between;
  padding-top: 16rpx;
}
.outbox .contentBox .long .longbox .bottom .img{
  width: 22rpx;
  height: 22rpx;
}
.outbox .contentBox .long .longbox .bottom .img image{
  width: 100%;
  height: 100%;
}
