.article .box .line{width: 100%;height: 1rpx;
  background-color: rgb(232,232,232);}
.article .box .function .collection{display: flex;
  align-items: center;justify-content: space-between;
  padding: 30rpx 0;}
.article .box .function .collection .rightPart{
  font-size: 24rpx;color: rgb(197,197,197);
}
.article .box .function .collection .leftPart{display: flex;
align-items: center;}
.article .box .function .collection .leftPart image{
  width: 40rpx;height: 40rpx;padding-right: 20rpx;
}
.article .box .function .collection .leftPart .tit{
  font-size: 27rpx;letter-spacing: 3rpx;
  font-weight: 500;
}


.linePar{width: 100%;height: 10rpx;
