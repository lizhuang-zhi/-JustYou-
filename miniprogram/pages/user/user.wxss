/* 重置版本样式 */
.uppart{width: 100%;height: 590rpx;
  background-color: ivory;opacity: 0;}


.article{background-color: rgb(255,255,255);
  padding: 0 30rpx;}
.article .box .theme{padding: 15rpx 0 20rpx;
