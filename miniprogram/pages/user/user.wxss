.other{background-color: rgb(255,255,255);
  padding: 20rpx 30rpx 40rpx;}
.other .box .line{width: 100%;height: 1rpx;
background-color: rgb(239,238,238);}
.other .box .theme{padding: 20rpx 0;
letter-spacing: 2rpx;}
.other .box .func image{width: 40rpx;height: 40rpx;
padding-right: 20rpx;}
.other .box .func .part{position: relative;
width: 100%;}
.other .box .func .part .inner{display: flex;
justify-content: space-between;align-items: center;
padding: 35rpx 0;}
.other .box .func .part .inner .left{display: flex;
  justify-content: space-between;align-items: center;}
.other .box .func .part .inner .left .tit{
  font-size: 27rpx;letter-spacing: 3rpx;
  font-weight: 500;}
.other .box .func .part .inner .right{
  font-size: 24rpx;color: rgb(197,197,197);
}
.other .box .func .part .liner{width: 100%;height: 2rpx;
