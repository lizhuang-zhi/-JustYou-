.TagBox{
  width: 100%;
  height: 100px;
  border-bottom: 1px solid rgb(204, 204, 204);
  display: flex;
  align-items: center;
}
/* 图片盒子 */
.TagBox .Picture{
  width: 100%;
  height:80px;
  display: flex;
  align-items: center;
}
/* 图片盒子里面的盒子 */
.TagBox .Picture .Picin{
  width: 100%;
  height:60px;
  padding: 0 10px;
  box-sizing: border-box;
  position: relative;
}
/* 图片大小 */
.TagBox .Picture .Picin .Picimg{
  width: 60px;
  height: 60px;
}
/* 标签 */
.TagBox .Picture .Picin .Tagtxt{
  position: absolute;
  top: 2px;
  left:80px;
  font-size: 18px;
  color: rgb(104, 179, 209);
}
/* 参与人数 */
.TagBox .Picture .Picin .Joinnum{
  position: absolute;
  bottom: 2px;
  left: 80px;
  font-size: 14px;
  color: rgb(181, 181, 181);
}
/* 马上参与 */
.TagBox .Picture .Picin .NowJoin{
  width:80px;
  height: 30px;
  line-height: 30px;
  text-align: center;
  background-color: rgb(61, 184, 233);
  color: white;
  border-radius: 10px;
  position: absolute;
  top: 15px;
  right: 10px;
}


/* 遍历的任务 */
.taskBar{padding: 30rpx 30rpx 0;}