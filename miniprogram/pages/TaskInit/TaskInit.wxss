/* 任务申请 */
.praisebar {
  padding: 10rpx 20rpx 10rpx;
}

.praisebar .list {
  width: 100%;
  height: 40px;
  display: flex;
  align-items: center;
}

/* 申请图片 */
.praisebar .list .join {
  width: 35px;
  padding: 10px;
}

.praisebar .list .join .jo {
  width: 33px;
  height: 33px;
}

.praisebar .list .join .jo .joinimg {
  width: 100%;
  height: 100%;
}
/* 申请加入 */
.praisebar .list .join .jo .txt{
  font-size: 12px;
  text-align: center;
}
/* 用户头像 */
.praisebar .list .user-image {
  width: 100%;
  display: flex;
  justify-content:left;
}

.praisebar .list .user-image .img {
  width: 25px;
  height: 25px;
  padding: 0 3px;
}

.praisebar .list .user-image .img .userimg {
  width: 100%;
  height: 100%;
  border-radius: 50%;
}
/* 用户名字 */
.praisebar .list .user-image .username{
  font-size:11px;
  text-align: center;
  white-space: nowrap;
  text-overflow: ellipsis;
  overflow: hidden;
}