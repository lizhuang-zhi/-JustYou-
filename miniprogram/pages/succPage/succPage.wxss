.outbox {
  width: 100%;
}

.outbox .back {
  display: flex;
  justify-content: left;
  position: absolute;
  left: 5%;
  top: 5%;
}

/* 发布成功logo */
.box {
  width: 100%;
  height: 500px;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 发表成功的字 */
.outbox .box .suc {
  display: flex;
  justify-content: center;
  flex-direction: column;
  text-align: center;
  font-size: 22px;
}

.box .suc view {
  margin-top: 20px;
}

/* 底部 */
.outbox .last {
  display: flex;
  justify-content: space-evenly;
  font-size: 20px;
  color: skyblue;
}

.outbox .last .look .lookimg,
.outbox .last .again .againimg {
  width: 20px;
  height: 20px;
}

/* 再次发布 和 再写一篇 */
.outbox .last .look,
.outbox .last .again {
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 文字padding */
.outbox .last .look .looktxt,
.outbox .last .again .againtxt {
  padding-left: 5px;
}